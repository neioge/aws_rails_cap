<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="employee_info">
        <%= render 'shared/employee_info' %>
      </section>
      <section class="report_form">
        <%= render 'shared/report_form' %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3>日報一覧</h3>
      <%= render 'shared/timeline' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>FAQ管理システムへようこそ</h1>
    
    <%= link_to "ログイン", login_path,  class: "btn btn-lg btn-primary" %>
    <%= link_to 'ゲストログイン', guest_login_path, method: :post, class: "btn btn-lg btn-info"%>
  </div>
<% end %>
